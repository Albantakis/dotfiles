# Util {{{

  # list dir contents (all with human-readable size)
  alias l='ls -AhG1'
  alias ll='ls -lAhG'
  alias ls='ls -Gh'
  alias lsa='ls -AhG'
  # shortcut for vim
  alias v="vim"
  # move file to trash
  alias t="trash-put"
  # safe rm
  alias rm="trash-put"
  # shortcut for clearing screen
  alias c='clear'
  # shortcut for clearing screen and dispalying dir contents
  alias cl='clear && l'
  # move up one directory
  alias ..="cd .."
  # cd to dropbox
  alias ~~="cd ~/Dropbox/"
  # cd to current project
  alias cur="cd ~/dev/projects/iit/cyphi"

# }}}

# Git {{{

  alias gc="git commit -m"
  # use GitHub's CLI git wrapper
  # alias git='hub'
  # git diff
  alias gd='git d'
  # git log
  alias gl='git l'
  # git branch
  alias gb='git branch'
  # git branch delete
  alias gbd='git branch -d'
  # git flow
  alias gf='git flow'
  # git flow feature
  alias gff='git flow feature'
  # git flow release
  alias gfr='git flow release'
  # git flow hotfix
  alias gfh='git flow hotfix'
  # fast git status
  alias g='git status'
  # edit .gitconfig
  alias vgrc="vim ~/.gitconfig"

# }}}

